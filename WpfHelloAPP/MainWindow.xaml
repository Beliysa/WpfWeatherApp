<Window x:Class="WpfHelloAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloAPP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1" Content="Get London Weather" HorizontalAlignment="Left" Margin="30,28,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="320,30,0,0" TextWrapping="Wrap" Text="Weather for :" VerticalAlignment="Top" Width="80" TextChanged="TextBox_TextChanged"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="400,30,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
